
From centos:sshd

MAINTAINER long@126.com

ARG BASE=/docker
ARG LISTEN=10000
ARG MORE=""

EXPOSE $LISTEN
COPY . $BASE

# RUN $BASE/script/initialize.sh $REPO && \
RUN	([ "$MORE" == "" -o "$MORE" == "1" -o "$MORE" == "0" ] || $BASE/$MORE || echo 1) 

CMD ["/bin/bash"]
CMD ["/start.sh"]
